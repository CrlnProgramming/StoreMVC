@model LoginViewModel

<div class="pozition__z d-flex v-center h-center">
    <div class="container__form">
        <div class="form">
            <button class="form-close">&times;</button>
            <h3 class="form-title">Регистрация</h3>
            <h4 class="form__little__title">Уже есть аккаунт?<p>Войти</p></h4>
            <form asp-action="Login" asp-controller="Account">
                <div class="col-12 col-md-7">
                    <div class="col-12 mb-3">
                        <div class="input-group placeholder">
                            <input class="input__form" asp-for="UserName" value="" required placeholder="Login" />
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="input-group placeholder">
                            <input class="input__form" asp-for="Password" value="" required placeholder="Пароль *" />
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <div class="input-group placeholder">
                            <input class="input__form" asp-for="RememberMe" value="" required placeholder="Повторите пароль *" />
                        </div>
                    </div>

                </div>

                <div class="d-flex h-center">
                    <button class="button">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    </div>
</div>